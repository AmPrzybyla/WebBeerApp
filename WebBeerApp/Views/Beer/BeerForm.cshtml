@model WebBeerApp.ViewModels.BeerFormViewModel
@{
    ViewBag.Title = "BeerForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>BeerForm</h2>


@using (Html.BeginForm("Save", "Beer"))
{

    @Html.ValidationSummary();
    <div class="form-group">
        @Html.LabelFor(b => b.Beer.Name)
        @Html.TextBoxFor(b => b.Beer.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(b=>b.Beer.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.Beer.StyleTypeId)
        @Html.DropDownListFor(b => b.Beer.StyleTypeId, new SelectList(Model.StyleTypes, "Id", "Name"), "Select", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Save</button>

}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
